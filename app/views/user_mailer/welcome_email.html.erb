<div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Description</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <td>
        <img src= <%= item.product.image.tiny%> > </img>
        </td>
        <td>
        <%= item.product.name %>
        </td>
        <td>
        <%= item.product.description%>
        </td>
        <td>
        <% if @email %>
          <%= @email %>
          <% else %>
          <%= @order.email%>
          <% end %>
        </td>
      </tbody>
      <% end %>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            $<%= @order.total_cents * 0.01%>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>